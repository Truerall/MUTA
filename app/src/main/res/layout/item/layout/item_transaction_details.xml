<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp8"
        android:foreground="?attr/selectableItemBackground">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_transaction_details_tv_label"
                style="@style/TextListRowHeaderDescriptionSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frg_transaction_details_tv_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_transaction_details_tv_data"
                style="@style/TextListRowContentMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/dm_frg_transaction_details_tv_description"
                android:layout_margin="@dimen/dp8"
                app:layout_constraintTop_toBottomOf="@+id/item_transaction_details_tv_label"/>

    </android.support.constraint.ConstraintLayout>